{
  "name": "cypressautomationframework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "full-regression-headed-chrome": "cypress run --headed --browser chrome --spec 'cypress/e2e/*.feature'",
    "full-regression-headless-chrome": "cypress run --browser chrome --spec 'cypress/e2e/*.feature'",
    "contact-us-tests-headed-chrome": "cypress run --headed --browser chrome --spec 'cypress/e2e/Contact_Us.feature'",
    "contact-us-headed": "cypress run -e TAGS=\"@login\" --headed",
    "contact-us-headless": "cypress run -e TAGS=\"@login\"",
    "contact-us-headed-except@login": "cypress run -e TAGS=\"@regression and not @login\" --headed",
    "regression-except@smoke": "cypress run -e TAGS=\"@regression and not @smoke\" --headed"



  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress": "^12.4.0"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^15.1.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "cypress-xpath": "^2.0.1",
    "ts-loader": "^9.4.2"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinition": "cypress/support/step_definitions/**/*.js",
    "html": {
      "enabled": true,
      "output": "cypress/reports/cucumber-html/cucumber-report.html"
    }
  }
}
